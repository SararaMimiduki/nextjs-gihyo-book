{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.useFlatConfig": false,
  "eslint.workingDirectories": [
    {
      "directory": "./src",
      "changeProcessCWD": true
    },
    {
      "directory": "./storybook",
      "changeProcessCWD": true
    }
  ]
}
